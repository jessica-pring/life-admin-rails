<div class="container">

  <div class="left-container">
    <h2>Dashboard</h2>

    <div class="tasks">
      <% current_user.tasks.each do |task| %>
        <p>
          <%# <%= link_to task.done ? "✔" : "❌", task_path(task), method: :task_done? %>
          
          <%= task.title %>
          <%= link_to '☠', task_path(task), class: "btn del",
                method: :delete,
                data: { confirm: "Are you sure?" } %>
        </p>
      <% end %>
    </div>

    <%= link_to "New Task", new_task_path, class: "btn btn-primary" %>
  </div>

</div>