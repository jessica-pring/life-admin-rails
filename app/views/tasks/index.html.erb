<h2>Tasks Index</h2>

<ol>
  <% @tasks.each do |task| %>
    <li><%= task.title %> - <%= link_to 'Delete', task_path(task), class: "btn btn-outline-danger",
            method: :delete,
            data: { confirm: "Are you sure?" } %></li>
  <% end %>
</ol>

<%= link_to "New Task", new_task_path, class: "btn btn-primary" %>
